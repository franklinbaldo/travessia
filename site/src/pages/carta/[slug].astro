---
import { getCollection, render } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const entries = await getCollection('dialogo');
  return entries.map(entry => ({
    params: { slug: entry.id },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);

const isRio = entry.data.autor.includes('Riobaldo');
const isTed = !isRio;
const autor = entry.data.autor;
const titulo = entry.data.titulo;

function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('pt-BR', {
    day: 'numeric',
    month: 'long',
    year: 'numeric',
    timeZone: 'UTC',
  }).format(date);
}

// Navigation: chronological order
const allDialogo = await getCollection('dialogo');
const sorted = allDialogo.sort((a, b) =>
  (a.data.data ? new Date(a.data.data).getTime() : 0) -
  (b.data.data ? new Date(b.data.data).getTime() : 0)
);
const currentIndex = sorted.findIndex(e => e.id === entry.id);
const prevEntry = currentIndex > 0 ? sorted[currentIndex - 1] : null;
const nextEntry = currentIndex < sorted.length - 1 ? sorted[currentIndex + 1] : null;

// Correspondence context
const correspondenceFlow = {
  isTedResponding: isTed && prevEntry ? !prevEntry.data.autor.includes('Riobaldo') : false,
  isRioResponding: isRio && prevEntry ? prevEntry.data.autor.includes('Riobaldo') : false,
  previousAuthor: prevEntry?.data.autor || null,
};
---

<Layout title={`${titulo} | Travessia`}>
  <article>
    <header class="manuscrito-header">
      {prevEntry && (
        <div class="correspondence-context">
          <div class={`correspondence-flow ${isTed ? 'ted-responding' : 'rio-responding'}`}>
            <span class="correspondence-label">Resposta a</span>
            <span class={`correspondence-author ${prevEntry.data.autor.includes('Riobaldo') ? 'autor-rio' : 'autor-ted'}`}>
              {prevEntry.data.autor}
            </span>
          </div>
        </div>
      )}
      <div class="carta-autor-badge">
        <span class={`autor-badge ${isRio ? 'autor-rio' : 'autor-ted'}`}>{autor}</span>
      </div>
      <h1>{titulo}</h1>
      <div class="post-meta">
        <time datetime={entry.data.data ? entry.data.data.toISOString() : ''}>
          {entry.data.data ? formatDate(new Date(entry.data.data)) : ''}
        </time>
      </div>
      <div class="separator"></div>
    </header>

    <div class={`manuscrito-body ${isRio ? 'carta-riobaldo' : ''}`}>
      <Content />
    </div>
  </article>

  <div class="correspondence-timeline">
    <span class="timeline-label">Sequência da correspondência</span>
    <div class="timeline-dots">
      {sorted.map((item, index) => {
        const isCurrentItem = item.id === entry.id;
        const isItemTed = !item.data.autor.includes('Riobaldo');
        return (
          <a
            href={`${import.meta.env.BASE_URL}carta/${item.id}`}
            class={`timeline-dot ${isCurrentItem ? 'current' : ''} ${isItemTed ? 'ted' : 'rio'}`}
            aria-label={`Carta ${index + 1}: ${item.data.autor}`}
            title={item.data.titulo}
          >
            {index + 1}
          </a>
        );
      })}
    </div>
  </div>

  <nav class="footer-nav">
    {prevEntry ? (
      <a href={`${import.meta.env.BASE_URL}carta/${prevEntry.id}`} class="footer-nav-link prev">
        <span class="footer-nav-dir">&larr; Anterior</span>
        <span class={`footer-nav-autor ${prevEntry.data.autor.includes('Riobaldo') ? 'autor-rio' : 'autor-ted'}`}>
          {prevEntry.data.autor}
        </span>
        <span class="footer-nav-titulo">{prevEntry.data.titulo}</span>
      </a>
    ) : <span></span>}
    {nextEntry ? (
      <a href={`${import.meta.env.BASE_URL}carta/${nextEntry.id}`} class="footer-nav-link next">
        <span class="footer-nav-dir">Pr&oacute;ximo &rarr;</span>
        <span class={`footer-nav-autor ${nextEntry.data.autor.includes('Riobaldo') ? 'autor-rio' : 'autor-ted'}`}>
          {nextEntry.data.autor}
        </span>
        <span class="footer-nav-titulo">{nextEntry.data.titulo}</span>
      </a>
    ) : <span></span>}
  </nav>
</Layout>
