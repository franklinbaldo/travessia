---
import { formatDate } from '../lib/utils';

interface Props {
  url: string;
  titulo: string;
  tipo: string;
  tipoLabel: string;
  subtitulo?: string;
  autor?: string;
  autorClasse?: string;
  excerpt: string;
  data?: Date;
}

const { url, titulo, tipo, tipoLabel, subtitulo, autor, autorClasse, excerpt, data } = Astro.props;
---

<a href={url} class="blog-card" data-tipo={tipo} data-autor={autorClasse}>
  <span class={`card-tipo tipo-${tipo}`}>
    {tipoLabel}
  </span>
  <h2 class="card-titulo">{titulo}</h2>
  {subtitulo && <p class="card-subtitulo">{subtitulo}</p>}
  <p class="card-excerpt">{excerpt}</p>
  <div class="card-meta">
    {autor && (
      <span class={`card-autor autor-${autorClasse}`}>{autor}</span>
    )}
    {data && (
      <time datetime={data.toISOString()}>
        {formatDate(data)}
      </time>
    )}
  </div>
</a>

<style>
  .blog-card {
    display: block;
    break-inside: avoid;
    margin-bottom: 1.5rem;
    padding: 1.5rem;
    background: var(--sand-bg);
    border: 1px solid var(--divider-color);
    border-radius: 8px;
    text-decoration: none;
    transition:
      background-color 0.4s ease,
      border-color 0.4s ease,
      transform 0.25s ease,
      box-shadow 0.4s ease;
  }

  .blog-card:hover {
    background: var(--water-bg);
    border-color: var(--water-border);
    transform: translateY(-3px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.06);
    opacity: 1;
  }

  :global([data-theme="dark"]) .blog-card:hover {
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.2);
  }

  .blog-card[data-autor="rio"] {
    border-left: 3px solid var(--secondary-color);
  }

  .blog-card[data-autor="ted"] {
    border-left: 3px solid var(--water-border);
  }

  .card-tipo {
    display: inline-block;
    font-family: var(--font-meta);
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.06em;
    padding: 0.2rem 0.55rem;
    border-radius: 3px;
    margin-bottom: 0.75rem;
  }

  .tipo-carta {
    background: rgba(139, 58, 42, 0.12);
    color: var(--secondary-color);
  }

  .tipo-abertura,
  .tipo-causo {
    background: rgba(196, 135, 58, 0.12);
    color: var(--accent-color);
  }

  .tipo-fechamento {
    background: rgba(139, 58, 42, 0.12);
    color: var(--secondary-color);
  }

  .tipo-fragmento {
    background: rgba(122, 111, 98, 0.12);
    color: var(--meta-color);
  }

  .card-titulo {
    font-size: 1.25rem;
    margin: 0 0 0.5rem;
    color: var(--text-color);
    line-height: 1.3;
    font-weight: 700;
  }

  .card-subtitulo {
    font-style: italic;
    color: var(--accent-color);
    font-size: 0.95rem;
    margin: 0 0 0.5rem;
  }

  .card-excerpt {
    font-size: 0.92rem;
    color: var(--meta-color);
    line-height: 1.55;
    margin: 0 0 0.75rem;
  }

  .card-meta {
    display: flex;
    gap: 0.75rem;
    align-items: center;
    font-family: var(--font-meta);
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--meta-color);
  }

  .card-autor {
    font-weight: 600;
  }

  .card-autor.autor-rio {
    color: var(--secondary-color);
  }

  .card-autor.autor-ted {
    color: var(--meta-color);
  }
</style>
