---
import { formatDate } from '../lib/utils';

interface Props {
  url: string;
  titulo: string;
  autorClasse?: string;
  autor?: string;
  excerpt: string;
  data?: Date;
}

const { url, titulo, autorClasse, autor, excerpt, data } = Astro.props;
---

<a href={url} class={`featured-post autor-border-${autorClasse}`} data-autor={autorClasse}>
  <div class="featured-label">Ãšltima Carta</div>
  <h2 class="card-titulo">{titulo}</h2>
  <p class="card-excerpt">{excerpt}</p>
  <div class="card-meta">
    {autor && (
      <span class={`card-autor autor-${autorClasse}`}>{autor}</span>
    )}
    {data && (
      <time datetime={data.toISOString()}>
        {formatDate(data)}
      </time>
    )}
  </div>
</a>

<style>
  .featured-post {
    display: block;
    margin-bottom: 2rem;
    padding: 1.75rem 2rem;
    background: var(--sand-bg);
    border: 1px solid var(--divider-color);
    border-radius: 8px;
    text-decoration: none;
    border-left: 4px solid var(--accent-color);
    transition:
      background-color 0.4s ease,
      border-color 0.4s ease,
      transform 0.25s ease;
  }

  .featured-post.autor-border-rio {
    border-left-color: var(--secondary-color);
  }

  .featured-post.autor-border-ted {
    border-left-color: var(--water-border);
  }

  .featured-post:hover {
    background: var(--water-bg);
    border-color: var(--water-border);
    transform: translateY(-2px);
    opacity: 1;
  }

  .featured-label {
    font-family: var(--font-meta);
    font-size: 0.62rem;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--meta-color);
    margin-bottom: 0.6rem;
  }

  .card-titulo {
    font-size: 1.45rem;
    margin: 0 0 0.5rem;
    color: var(--text-color);
    line-height: 1.3;
    font-weight: 700;
  }

  .card-excerpt {
    font-size: 0.95rem;
    color: var(--meta-color);
    line-height: 1.55;
    margin: 0 0 0.75rem;
  }

  .card-meta {
    display: flex;
    gap: 0.75rem;
    align-items: center;
    font-family: var(--font-meta);
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--meta-color);
  }

  .card-autor {
    font-weight: 600;
  }

  .card-autor.autor-rio {
    color: var(--secondary-color);
  }

  .card-autor.autor-ted {
    color: var(--meta-color);
  }
</style>
